<form method="POST" action="/new">
  <fieldset>
    <legend>Add Message</legend>
    <label>
      Author's name:
      <input type="text" name="authorName" placeholder="John doe" />
    </label>
    <label>
      Message text:
      <textarea
        name="messageText"
        cols="30"
        rows="10"
        placeholder="Something here ..."
      ></textarea>
    </label>
    <button>Add</button>
  </fieldset>
</form>
